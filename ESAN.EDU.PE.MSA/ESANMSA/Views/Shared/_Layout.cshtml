<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap Core CSS -->
    <link href="@Url.Content("~/Content/bootstrap/bootstrap.min.css")" rel="stylesheet" />
    <!-- MetisMenu CSS -->
    <link href="@Url.Content("~/Content/template/metisMenu/metisMenu.min.css")" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="@Url.Content("~/Content/template/sb-admin-2.css")" rel="stylesheet" />
    <!-- Morris Charts CSS -->
    <link href="@Url.Content("~/Content/template/morrisjs/morris.css")" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="@Url.Content("~/Content/template/font-awesome/css/font-awesome.min.css")" rel="stylesheet" />
    <style type="text/css">
        #navSuperior {
            background-color: #CF1111;
        }

        .lnkOpciones {
            color: #ffffff;
            text-decoration: none;
        }
    </style>
    <!-- jQuery -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery/jquery.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery/jquery-migrate-1.4.1.js")"></script>
    <!-- Bootstrap Core JavaScript -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap/bootstrap.min.js")"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/template/metisMenu/metisMenu.min.js")"></script>
    <!-- Morris Charts JavaScript -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/template/raphael/raphael.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/template/morrisjs/morris.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/template/data/morris-data.js")"></script>
    <!-- Custom Theme JavaScript -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/template/sb-admin-2.js")"></script>
    @*<script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap/validator/validate-bootstrap.jquery.js")"></script>*@
    <script type="text/javascript">
        var URL_PAGE = "@Url.Content("~")";
    </script>
    @RenderSection("Styles", false)
    @RenderSection("Scripts", false)
</head>
<body>

    <div id="wrapper">
        <!-- Navigation -->
        <nav id="navSuperior" class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0; padding-right: 17px">
            <div class="navbar-header">
                <a href="@Url.Action("Index", "Principal", new { area = "Seguridad" })">
                    <img src="~/Content/images/logo-transparente.png" />
                </a>
            </div> 
            <ul class="nav navbar-top-links navbar-right">

                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle lnkOpciones" data-toggle="dropdown" href="#">
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>&nbsp;&nbsp;&nbsp;<i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-alerts">
                        <li>
                            <a href="@Url.Action("Index", "Promocion", new { area = "Administrador" })">
                                <div>
                                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>&nbsp;Parametrizar Evaluación
                                    
                                </div>
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="@Url.Action("Index", "Link", new { area = "Administrador" })">
                                <div>
                                    <span class="glyphicon glyphicon-globe" aria-hidden="true"></span>&nbsp;Generación de links
                                   
                                </div>
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="#">
                                <div>
                                    <span class="glyphicon glyphicon-inbox" aria-hidden="true"></span>&nbsp;Gestión de evaluaciones
                                    
                                </div>
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="@Url.Action("frmPromociones", "ResultadoEvaluacion", new { area = "Administrador" })">
                                <div>
                                    <span class="glyphicon glyphicon-globe" aria-hidden="true"></span>&nbsp;Resultado de evaluaciones
                                    
                                </div>
                            </a>
                        </li>
                    </ul>
                    <!-- /.dropdown-alerts -->
                </li>
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle lnkOpciones" href="@Url.Action("Logout", "Acceso", new { area = "Seguridad" })">
                        <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                    </a>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>                      
        </nav>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    @RenderBody()
                </div>
                <!-- /.col-lg-12 -->
            </div>

        </div>
        <!-- /#page-wrapper -->
    </div>
</body>
</html>
